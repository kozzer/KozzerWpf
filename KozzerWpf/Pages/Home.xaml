<Page x:Class="KozzerWpf.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KozzerWpf.Pages"
      xmlns:components="clr-namespace:KozzerWpf.Components"
      mc:Ignorable="d"  
      d:DesignHeight="1000" d:DesignWidth="800"
      Title="Home">

    <DockPanel LastChildFill="True">
        <components:DocumentStatus DockPanel.Dock="Right" />
        <Label x:Name="homeLabel" Content="HOME PAGE" FontSize="64" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Orange" />
    </DockPanel>
</Page>
